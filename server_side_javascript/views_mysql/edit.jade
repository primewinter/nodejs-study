doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title View
    body 
        h1 
            a(href='/topic') Sever Side JavaScript
        ul
            each topic in topics
                li 
                    a(href='/topic/'+topic.id)=topic.title

        article 
            form(action="/topic/"+topic.id+"/edit" method="post")  
                p
                    input(type="text" name="title" value=topic.title
                    placeholder="title")
                p  
                    textarea(name="description" value=topic.description
                    placeholder="description")
                p
                    input(type="text" name="author" value=topic.author
                    placeholder="author")
                p 
                    input(type="submit")
        ul
            li 
                a(href='/topic/add') add